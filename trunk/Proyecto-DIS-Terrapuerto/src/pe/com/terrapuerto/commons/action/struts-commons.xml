<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="terrapuerto-tiles" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
	</package>
	
	<package name="common" namespace="/" extends="struts-default,tiles-default">
		
		<action name="loginAdmin" class="pe.com.terrapuerto.commons.action.LoginUserAction">
			<result type="tiles" name="success">home-admin-terrapuerto</result>
			<result name="error">loginAdministrador.jsp</result>
		</action>
		
		<action name="mantenerEmpresa" class="pe.com.terrapuerto.commons.action.MantenerEmpresaTranspAction">
			<result type="tiles">registro-empresa</result>
			<result name="registra" type="tiles">registro-empresa</result>
			<result name="edita" type="tiles">edicion-empresa</result>
			<result name="actualiza" type="tiles">lista-empresas</result>
			<result name="elimina" type="tiles">lista-empresas</result>
		</action>

	</package>
</struts>